<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/itt"
        android:foregroundGravity="top"
        android:id="@+id/logo"/>
    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:entries="@array/nocontrol"
        android:layout_toRightOf="@id/logo"
        />


    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7D2D1"
        android:text="Macias Urzua Delia"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_below="@id/logo"
        android:id="@+id/cale"

        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7D2D1"
        android:text="Alfaro Falcon Sergio"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_below="@id/cale"
        android:id="@+id/calee"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asunto:"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:textSize="18dp"
        android:id="@+id/asu"
        android:layout_below="@id/calee"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CD0"
        android:layout_marginTop="20dp"
        android:hint="    I M P O R T A N T E"
        android:layout_toRightOf="@id/asu"
        android:layout_below="@id/calee"
        android:id="@+id/impo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensaje:"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:textSize="18dp"
        android:id="@+id/mnj"
        android:layout_below="@id/asu"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#CD0"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/asu"
        android:layout_below="@id/impo"
        android:id="@+id/texto"
        />
    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="ENVIAR"
        android:layout_below="@id/texto"
        android:layout_margin="20dp"
        android:id="@+id/enviar"
        android:onClick="enviar"
        />



</RelativeLayout>